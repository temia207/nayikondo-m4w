<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login.html</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>login.jsp</servlet-name>
        <jsp-file>/login.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>login.jsp</servlet-name>
        <url-pattern>/login.html</url-pattern>
    </servlet-mapping>

  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>
    /WEB-INF/m4water-web-applicationContext-security.xml
    </param-value>
  </context-param>
  <!-- Acegi/Spring Security filter (to intercept the requests and perform security checks) s-->
    <filter>
        <filter-name>springSecurityFilterChain</filter-name>
        <filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>springSecurityFilterChain</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
      <!-- secures resources which would be otherwise accessible via a direct link -->
  <security-constraint>
  	<web-resource-collection>
  		<web-resource-name>HTTP-Protected-Resource</web-resource-name>
  		<description>Access Denied to settings file</description>
  		<url-pattern>/M4WATER_SETTINGS.properties</url-pattern>
  	</web-resource-collection>
  	<auth-constraint/>
  </security-constraint>
</web-app>
